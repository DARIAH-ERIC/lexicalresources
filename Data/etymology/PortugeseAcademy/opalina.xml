         <entry xml:lang="pt" xml:id="opalina">
            <form type="lemma">
               <orth>opalina</orth>
               <gramGrp>
                  <gram type="pos" norm="NOUN">s.</gram>
                  <gram type="gen">f.</gram>
               </gramGrp>
            </form>
            <bibl type="attestation">
               <pc>(</pc>
               <date>1899</date>
               <lbl>cf.</lbl>
               <title>CF1</title>
               <pc>)</pc>
            </bibl>
            <sense n="1" xml:id="opalina_sense1">
               <def>vidro de aspeto acetinado, irisado quando visto à contraluz, leitoso, ger.
                  translúcido, us. no fabrico de objectos decorativos, jarras, taças, lustres
                  etc.</def>
            </sense>
            <sense n="2" xml:id="opalina_sense2">
               <usg type="meaningType">p.met.</usg>
               <def>o objeto fabricado com esse vidro</def>
               <cit type="example">
                  <!--I can't use the symbol < >-->
                  <pc>(</pc>
                  <quote>tem uma colecção de opalinas francesas</quote>
                  <pc>)</pc>
               </cit>
            </sense>
            <sense n="3" xml:id="opalina_sense3">
               <def>vidro branco, leitoso, espesso, us. para forrar paredes, tecos etc.</def>
            </sense>
            <metamark function="etymology">¤</metamark>
            <etym type="borrowing">
               <lbl>etim</lbl>
               <cit type="etymon">
                  <lang expand="francês" norm="fr">fr.</lang>
                  <form xml:lang="fr">
                     <orth>opaline</orth>
                  </form>
                  <bibl type="attestation">
                     <pc>(</pc>
                     <date>1899</date>
                     <pc>)</pc>
                  </bibl>
                  <pc>'</pc>
                  <gloss>tipo de vaso vitrificado</gloss>
                     <pc>'</pc>
                  <pc>;</pc>
                  <xr type="related">
                     <lbl>ver</lbl>
                     <ref type="entry">opal(i)-</ref>
                  </xr>
                  <note>a datação é para a ace., não registada aqui, ’género de infusórios que se
                     encontra no ventre das rãs’</note>
                  <pc>;</pc>
               </cit>
            </etym>
            <metamark function="homonymy">¤</metamark>
            <lbl>hom</lbl>
            <note>opalina (f.opalino [adj.])</note>
            <!--etc.-->
         </entry>
