         <entry xml:lang="pt" xml:id="neve">
            <form type="lemma">
               <orth>neve</orth>
               <gramGrp>
                  <pos norm="noun">s.</pos>
                  <gen norm="feminine">f.</gen>
               </gramGrp>
            </form>
            <bibl type="attestation">
               <pc>(</pc>
               <date>sXIII</date>
               <lbl>cf.</lbl>
               <title>FichIVPM</title>
               <pc>)</pc>
            </bibl>
            <sense n="1" xml:id="neve_sense1">
               <usg type="domain">met</usg>
               <def>precipitação de cristais de gelo, freq. agrupados em flocos e formados pelo congelamento do vapor de
                  água que se encontra suspenso na atmosfera</def>
            </sense>
            <sense n="2" xml:id="neve_sense2">
               <usg type="meaningType">p.met.</usg>
               <def>floco ou conjunto de flocos desses cristais</def>
            </sense>
            <sense n="3" xml:id="neve_sense3">
               <usg type="meaningType">p.met.</usg>
               <def>camada desses flocos depositada sobre a terra</def>
            </sense>
            <sense n="4" xml:id="neve_sense4">
               <usg type="meaningType">p.met.</usg>
               <def>frio excessivo</def>
            </sense>
            <sense n="5" xml:id="neve_sense5">
               <usg type="meaningType">p.ext.</usg>
               <def>a cor branca muito alva</def>
            </sense>
            <sense n="5.1" xml:id="neve_sense5.1">
               <usg type="meaningType">p.ext.</usg>
               <def>cabeleira branca; cãs</def>
               <pc>;</pc>
            </sense>
            <sense n="6" xml:id="neve_sense6">
               <usg type="geographic">p</usg>
               <def>iguaria preparada com açúcar, leite ou sumo de frutas; gelado</def>
               <pc>;</pc>
            </sense>
            <sense n="7" xml:id="neve_sense7">
               <usg type="domain">eletrón</usg>
               <def>conjunto de pontos brancos e diminutos que se formam no ecrã de um televisor ou radar</def>
            </sense>
