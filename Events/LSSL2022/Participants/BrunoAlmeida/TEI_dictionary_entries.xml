         <entry xml:id="entry.1">
            <form type="lemma">
               <orth>alegoria</orth>
               <syll>a·le·go·ri·a</syll>
            </form>
            <gramGrp>
               <pos norm="noun">n.</pos>
               <gen norm="feminine">f.</gen>
            </gramGrp>
            <sense xml:id="alegoria.1">
               <def>Modo indirecto de representar uma coisa ou uma ideia sob a
                  aparência de outra.</def>
            </sense>
         </entry>
         <entry xml:id="entry.2">
            <form type="lemma">
               <orth>surrar</orth>
               <syll>sur·rar</syll>
            </form>
            <gramGrp>
               <pos norm="verb">v.</pos>
               <subc norm="transitive">tr.</subc>
               <subc norm="pronominal">pron.</subc>
            </gramGrp>
            <entry xml:id="entry.2.1">
               <gramGrp>
                  <pos norm="verb">verbo</pos>
                  <subc norm="transitive">transitivo</subc>
               </gramGrp>
               <sense n="1." xml:id="surrar.1">
                  <def>Tirar o pêlo às peles e limpar-lhes o carnaz.</def>
               </sense>
               <sense n="2." xml:id="surrar.2">
                  <def>Dar surra ou sova em.</def>
                  <xr type="syn">açoitar</xr>
                  <xr type="syn">fustigar</xr>
                  <xr type="syn">sovar</xr>
               </sense>
               <sense n="3." xml:id="surrar.3">
                  <def>Gastar a superfície com o uso.</def>
               </sense>
            </entry>
            <entry xml:id="entry.2.2">
               <gramGrp>
                  <pos norm="verb">verbo</pos>
                  <subc norm="pronominal">pronominal</subc>
               </gramGrp>
               <sense n="4." xml:id="surrar.4">
                  <def>Gastar-se; coçar-se.</def>
               </sense>
               <sense n="5." xml:id="surrar.5">
                  <usg type="socioCultural">Informal</usg>
                  <def>Ir-se a furto, abalar.</def>
               </sense>
            </entry>
            <xr type="cf">zurrar</xr><pc>.</pc>
         </entry>
