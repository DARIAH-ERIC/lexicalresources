        <entry>
           <form>
              <orth>andar</orth>
              <hyph>an|dar</hyph>
              <pron notation="ipa">ɐ̃ˈdar</pron>
           </form>
              <etym>
                 <lang>Latim</lang>
                 <mentioned>ambulo</mentioned>,
               <gloss>caminhar, passear</gloss>
              </etym>
           <hom n="1">
              <gramGrp>
                 <pos>noun</pos>
              </gramGrp>
              <sense n="1" xml:id="andarN1">
                 <def>modo de deslocar-se dando passos</def>
                 <cit type="example">
                    <quote>Reconheci-o pelo andar apressado.</quote>
                 </cit>
              </sense>
              <sense n="2" xml:id="andarN2">
                 <def>cada uma das camadas ou fiadas sobrepostas que constituem algo</def>
                 <cit type="example">
                    <quote>Ela queria um bolo de 3 andares.</quote>
                 </cit>
              </sense>
              <sense n="3" xml:id="andarN3">
                 <def>piso de uma edificação acima do nível térreo</def>
                 <cit type="example">
                    <quote>Os meus pais moram no 4º andar.</quote>
                 </cit>
              </sense>
              <sense n="4" xml:id="andarN4">
                 <def>cada um dos apartamentos de um edifício de habitação</def>
                 <cit type="example">
                    <quote>Vende-se andar com varanda.</quote>
                 </cit>
              <re>
                 <form>
                    <orth>andar modelo</orth>
                 </form>
               <sense n="1" xml:id="andar_modelo">
                       <def>apartamento que se destina a ser mostrado a potenciais compradores</def>
                    </sense></re>
              </sense>
           </hom>
           <hom n="2">
              <gramGrp n="1">
                 <pos>verbo</pos>
                     <iType>intransitivo</iType>
              </gramGrp>
              <sense n="1" xml:id="andarV1">
                 <def>mover-se, mudando de local</def>
                 <cit type="example">
                    <quote>O ponteiro andou para a esquerda.</quote>
                 </cit>
              </sense>
              <sense n="2" xml:id="andarV2">
                 <def>deslocar-se dando passos</def>
                 <cit type="example">
                    <quote>Nunca mais andou depois do acidente.</quote>
                 </cit>
              </sense>
              <sense n="3" xml:id="andarV3">
                 <def>estar em atividade ou funcionamento</def>
                 <cit type="example">
                    <quote>O motor não está a andar.</quote>
                 </cit>
              </sense>
              <gramGrp n="2">
                 <pos>verbo</pos>
                 <iType>transitivo direto</iType>
              </gramGrp>
              <sense n="1" xml:id="andarV4">
                 <def>deslocar-se dando passos percorrendo uma dada extensão</def>
                 <cit type="example">
                    <quote>Os atletas andaram 4 quilómetros e correram os restantes 20.</quote>
                 </cit>
              </sense>
              <gramGrp n="3">
                 <pos>verbo</pos>
                 <iType>transitivo indireto</iType>
              </gramGrp>
              <sense n="1" xml:id="andarV5">
                 <def>deslocar-se usando um meio de transporte</def>
                 <cit type="example">
                    <quote>Os camponeses raramente andavam de carruagem.</quote>
                 </cit>
              </sense>
              <sense n="2" xml:id="andarV6">
                 <def>estar um dado tempo num local ou região</def>
                 <cit type="example">
                    <quote>Eles conheceram-se quando ela andava no Norte.</quote>
                 </cit>
              </sense>
              <sense n="3" xml:id="andarV7">
                 <def>desenvolver uma atividade ou hobby</def>
                 <cit type="example">
                    <quote>O rapaz anda no karaté.</quote>
                 </cit>
              </sense>
           </hom>
        </entry>
      
         <entry>
                <form>
                   <orth>simples</orth>
                   <hyph>sim|ples</hyph>
                   <pron notation="ipa">ˈsĩpləʃ</pron>
                     </form>
                     <etym>
                        <lang>Latim</lang>
                        <mentioned>simplex</mentioned>,
                        <gloss>que não é duplo, singelo, só, único, que não é complicado, sincero</gloss>
                     </etym>
                     <hom n="1">
                        <gramGrp>
                           <pos>adjetivo</pos>
                           <gen>uniforme</gen>
                           <number>uniforme</number>
                        </gramGrp>
                        <sense n="1" xml:id="simplesA1">
                           <def>Que não resulta da junção de vários elementos ou de várias partes; que tem apenas um elemento ou constituinte.</def>
                           <cit type="example">
                              <quote>Estes módulos são simples, não têm subcomponentes.</quote>
                           </cit>
                        </sense>
                        <sense n="2" xml:id="simplesA2">
                           <def>que se faz ou resolve com facilidade</def>
                           <cit type="example">
                              <quote>A questão era muito simples.</quote>
                           </cit>
                        </sense>
                        <sense n="3" xml:id="simplesA3">
                           <def>que não tem luxo ou sofisticação</def>
                           <cit type="example">
                              <quote>Os meus pais levam uma vida simples.</quote>
                           </cit>
                        </sense>
                        <sense n="4" xml:id="simplesA4">
                           <def>que não se destaca ou é extraordinário</def>
                           <cit type="example">
                              <quote>Sou um simples estudante.</quote>
                           </cit>
                        </sense>
                        
                     </hom>
                     <hom n="2">
                        <gramGrp n="1">
                           <pos>nome</pos>
                           <gen>masculino e feminino</gen>
                           <number>uniforme</number>
                        </gramGrp>
                        <sense n="1" xml:id="simplesN1">
                           <def>pessoa humilde ou não muito instruída</def>
                           <cit type="example">
                              <quote>O político só conseguiu convencer os simples.</quote>
                           </cit>
                        </sense>
                     </hom>
                  </entry>
      </body>
